/* pages/warning/warning.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

.header {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.report-btn {
  background-color: #1296db;
  color: #ffffff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

/* 道路容器 */
.road-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background-color: #222222;
}

/* 车道容器 */
.lanes-container {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
}

/* 车道样式 */
.lane {
  flex: 1;
  height: 100%;
  background-color: #333333;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 车道分隔线 */
.lane-divider {
  width: 6rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

/* 虚线 */
.dash-line {
  width: 6rpx;
  height: 20rpx;
  background-color: #ffffff;
  margin: 5rpx 0;
}

/* 车辆图标 */
.car-icon {
  width: 150rpx;
  height: 150rpx;
  z-index: 100;
  animation: pulse 1s infinite alternate;
}

@keyframes pulse {
  0% {
    opacity: 0.7;
  }
  100% {
    opacity: 1;
  }
}

.car-icon image {
  width: 100%;
  height: 100%;
}

/* 车道标签样式 */
.lane-labels {
  display: flex;
  margin-top: 10rpx;
}

.lane-label {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #666666;
}

/* 预警section标题 */
.warning-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.warning-list {
  margin-bottom: 30rpx;
}

.warning-item {
  background-color: #ffffff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  display: flex;
  position: relative;
}

.warning-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.warning-icon image {
  width: 40rpx;
  height: 40rpx;
}

.warning-info {
  flex: 1;
  overflow: hidden;
}

.warning-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.warning-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.warning-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.warning-location {
  max-width: 70%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.warning-time {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #999999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  color: #999999;
  font-size: 28rpx;
}

.warning-tips {
  text-align: center;
  color: #999999;
  font-size: 24rpx;
} 